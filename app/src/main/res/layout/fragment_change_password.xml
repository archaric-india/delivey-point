<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/titleWithBackBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="18dp">

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/backToHomePageOnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="-6dp"
                    android:src="@drawable/ic_arrow_back_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="Back"
                    android:textColor="@color/Blue"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/resNameTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="25dp"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="15sp"
            android:paddingStart="0dp"
            android:gravity="start"
            android:id="@+id/oldPassword"
            tools:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:hint="Old Password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:tag="Old Password"
            android:textColorHint="@color/line"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="25dp"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="15sp"
            android:paddingStart="0dp"
            android:gravity="start"
            android:id="@+id/newPassword"
            tools:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:hint="New Password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:tag="LaneLine Number"
            android:textColorHint="@color/line"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:paddingHorizontal="25dp"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="15sp"
            android:paddingStart="0dp"
            android:gravity="start"
            android:id="@+id/confirmPassword"
            tools:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:tag="Confirm Password"
            android:textColorHint="@color/line"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/changePassword"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Change Password"
        android:textColor="@color/white"/>



</LinearLayout>