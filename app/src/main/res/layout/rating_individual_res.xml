<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingBarOfResReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-120dp"
                android:layout_marginBottom="0dp"
                android:isIndicator="true"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:theme="@style/RatingBar"
                android:transformPivotX="0dp"
                android:transformPivotY="15sp" />


            <TextView
                android:id="@+id/reviewNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:text="Dark Choco lava cake"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/reviewNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_access_time_24"/>

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/reviewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 NOV 2020"
                    android:textSize="15sp" />


            </LinearLayout>





        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemImageReview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</LinearLayout>