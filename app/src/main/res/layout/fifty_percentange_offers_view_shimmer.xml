<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/fiftyPerOffersCardView"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/fiftyPerOffersIV"
            android:scaleType="centerCrop"/>

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="100dp">

           <TextView
               android:background="@color/line"
               android:layout_marginTop="10dp"
               android:textSize="15sp"
               android:layout_marginStart="15dp"
               android:id="@+id/itemNameOfFiftyPerOffers"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="                           "/>


           <TextView
               android:background="@color/line"
               android:layout_marginTop="5dp"
               android:textSize="12sp"
               android:layout_marginStart="15dp"
               android:id="@+id/categoryOfFiftyPerOffers"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="                  "/>

          <LinearLayout
              android:layout_marginStart="15dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <RatingBar
                  android:theme="@style/RatingBar"
                  android:id="@+id/ratingBar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="-120dp"
                  android:layout_marginBottom="0dp"
                  android:isIndicator="true"
                  android:numStars="5"
                  android:scaleX=".5"
                  android:scaleY=".5"
                  android:transformPivotX="0dp"
                  android:transformPivotY="15sp" />

              <TextView
                  android:background="@color/line"
                  android:layout_marginTop="10dp"
                  android:id="@+id/totalNumOfReview"
                  android:layout_gravity="top"
                  android:textSize="15sp"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="    "/>
          </LinearLayout>
       </LinearLayout>


        <LinearLayout
            android:id="@+id/dis"
            android:layout_marginTop="190dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:background="@color/line"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"/>

            <TextView
                android:background="@color/line"
                android:id="@+id/estimatedDeliveryTime"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="          "/>

            <TextView
                android:background="@color/line"
                android:gravity="center"
                android:id="@+id/priceFiftyPerOff"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                  "/>


        </LinearLayout>

        <LinearLayout

            android:layout_below="@+id/dis"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:background="@color/line"
                android:layout_marginStart="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:background="@color/line"
                android:id="@+id/offerPercentage"
                android:textColor="@color/purple"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                        android:text="          "/>

        </LinearLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>