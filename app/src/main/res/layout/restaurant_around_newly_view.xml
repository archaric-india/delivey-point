<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/resAroundNewlyJoinedCardView"
    android:foreground="@drawable/flat_ripple_transparent"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="245dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/fiftyPerOffersIV"
            android:scaleType="centerCrop"/>

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="120dp">

           <TextView
               android:fontFamily="@font/sf_semibold"
               android:layout_marginTop="10dp"
               android:textColor="@color/black"
               android:textSize="16sp"
               android:layout_marginStart="15dp"
               android:id="@+id/itemNameOfFiftyPerOffers"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cake Lake"/>


           <TextView
               android:textColor="@color/lightBlack"
               android:layout_marginTop="5dp"
               android:textSize="13sp"
               android:layout_marginStart="15dp"
               android:id="@+id/categoryOfFiftyPerOffers"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="CategotyName"/>

          <LinearLayout
              android:layout_marginStart="15dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <RatingBar
                  android:theme="@style/RatingBar"
                  android:id="@+id/ratingBar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="-120dp"
                  android:layout_marginBottom="0dp"
                  android:isIndicator="true"
                  android:numStars="5"
                  android:scaleX=".5"
                  android:scaleY=".5"
                  android:transformPivotX="0dp"
                  android:transformPivotY="15sp" />

              <TextView
                  android:layout_marginTop="10dp"
                  android:id="@+id/totalNumOfReview"
                  android:layout_gravity="top"
                  android:textSize="15sp"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="(24)"/>
          </LinearLayout>
       </LinearLayout>


        <LinearLayout
            android:id="@+id/dis"
            android:layout_marginTop="214dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:src="@drawable/ic_scooter"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"/>

            <TextView
                android:textColor="@color/lightBlack"
                android:id="@+id/estimatedDeliveryTime"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-30mins"/>

            <TextView
                android:textColor="@color/lightBlack"
                android:gravity="center"
                android:id="@+id/priceFiftyPerOff"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery: KD 55.500"/>


        </LinearLayout>




    </RelativeLayout>



</androidx.cardview.widget.CardView>