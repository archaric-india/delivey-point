<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/addressCardView"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_margin="1dp"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <TextView
                android:translationY="-5dp"
                android:id="@+id/cusName"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                tools:text="Test test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/deliveryTo"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/light_text"
                tools:text="Test test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/buildingNoAndName"
                android:textSize="15sp"
                android:textColor="@color/light_text"
                tools:text="Test test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/roomNoAndBlockAndCity"
                android:textSize="15sp"
                android:textColor="@color/light_text"
                tools:text="Test test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/cusArea"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/mobileAndLane"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                tools:text="9361109307"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>

</androidx.cardview.widget.CardView>